<div class="container">

    <div class="burgers">

        <h3>Burger List</h3>

        <ul>
        {{#each burgers}}
            <!--{{#unless this.devoured}} -->
            <div>
                <pre>
                    {{this.id}}. {{this.burger_name}}
                </pre>
            </div>
            <!-- {{/unless}}  -->
        {{/each}}
    </ul>

    </div>

    <div class="devoured">

        <h3>Devoured Burgers</h3>

        <ul>
            {{#each burgers}}
                {{#if devoured}}
                {{/if}}
            {{/each}}
        </ul>

        
    </div>

</div>